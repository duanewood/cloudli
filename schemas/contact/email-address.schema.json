{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://planbundle.com/schemas/contact/email-address.schema.json",
  "definitions": {
    "email_address": {
      "type": "object",
      "title": "Email Address for a Contact",
      "required": [
        "type",
        "value"
      ],
      "properties": {
        "value": {
          "type": "string",
          "title": "Email Address",
          "examples": [
            "someuser@gmail.com"
          ],
          "format": "email"
        },
        "otherTypes": {
          "type": "array",
          "title": "Array on non-standard types",
          "items": {
            "type": "string",
            "title": "A non-standard type name",
            "examples": [
              "internet"
            ],
            "pattern": "^(.*)$"
          }
        },
        "type": {
          "type": ["array","string"],
          "title": "Array of standard types",
          "items": {
            "type": "string",
            "title": "The name of the standard type",
            "examples": [
              "home"
            ],
            "pattern": "^(.*)$"
          }
        },
        "preferred": {
          "type": "boolean",
          "title": "Preferred item indicator",
          "examples": [
            false
          ]
        },
        "label": {
          "type": "string",
          "title": "Item Label",
          "examples": [
            "home"
          ],
          "pattern": "^(.*)$"
        },
        "groupLabel": {
          "type": ["string","null"],
          "title": "Group Label",
          "examples": [
            "Anniversary"
          ],
          "pattern": "^(.*)$"
        }
      },
      "additionalProperties": false
    }
  }
}
