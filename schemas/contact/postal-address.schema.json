{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://planbundle.com/schemas/contact/postal-address.schema.json",
  "definitions": {
    "postal_address": {
      "type": "object",
      "title": "Postal Address for a Contact",
      "required": [
        "type",
        "country"
      ],
      "properties": {
        "postalCode": {
          "type": ["string","null"],
          "title": "Postal / Zip Code",
          "examples": [
            "32092"
          ],
          "pattern": "^[0-9]{5}$|^[0-9]{5}-[0-9]{4}$"
        },
        "city": {
          "type": ["string","null"],
          "title": "City",
          "examples": [
            "St. Augustine"
          ],
          "pattern": "^(.*)$"
        },
        "state": {
          "type": ["string","null"],
          "title": "State Code",
          "examples": [
            "FL"
          ],
          "pattern": "^($|[a-zA-Z][a-zA-Z])$"
        },
        "country": {
          "type": ["string","null"],
          "title": "Country Name",
          "examples": [
            "United States"
          ],
          "pattern": "^(.*)$"
        },
        "street": {
          "type": ["string","null"],
          "title": "Street Address",
          "examples": [
            "1027 Elm St"
          ],
          "pattern": "^[\\s\\S]*$"
        },
        "otherTypes": {
          "type": "array",
          "title": "Array on non-standard types",
          "items": {
            "type": "string",
            "title": "A non-standard type name",
            "examples": [
              "internet"
            ],
            "pattern": "^(.*)$"
          }
        },
        "type": {
          "type": ["array","string"],
          "title": "Array of standard types",
          "items": {
            "type": "string",
            "title": "The name of the standard type",
            "examples": [
              "home"
            ],
            "pattern": "^(.*)$"
          }
        },
        "preferred": {
          "type": "boolean",
          "title": "Preferred item indicator",
          "examples": [
            false
          ]
        },
        "label": {
          "type": "string",
          "title": "Item Label",
          "examples": [
            "home"
          ],
          "pattern": "^(.*)$"
        },
        "groupLabel": {
          "type": ["string","null"],
          "title": "Group Label",
          "examples": [
            "Anniversary"
          ],
          "pattern": "^(.*)$"
        }
      },
      "additionalProperties": false
    }
  }
}