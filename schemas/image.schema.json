{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://planbundle.com/schemas/image.schema.json",
  "definitions": {
    "image": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "title": "URL Image Schema",
          "description": "Object used to reference images in bundles and bundle items",
          "required": [
            "type",
            "src"
          ],
          "properties": {
            "type": {
              "const": "imageurl"
            },
            "src": {
              "type": "string",
              "title": "The source url for the image",
              "examples": [
                "https://www.some.com/my.jpeg"
              ],
              "pattern": "^https?:\/\/.*$"
            }
          }    
        },
        {
          "type": "object",
          "title": "Cloud URL (Google Cloud Storage) Image Schema",
          "description": "Object used to reference images in bundles and bundle items",
          "required": [
            "type",
            "src",
            "id"
          ],
          "properties": {
            "type": {
              "const": "cloud"
            },
            "src": {
              "type": "string",
              "title": "Source url for the image",
              "examples": [
                "https://www.some.com/my.jpeg"
              ],
              "pattern": "^https?:\/\/.*$"
            },
            "id": {
              "type": "string",
              "title": "Id of Image File in Cloud Storage",
              "examples": [
                "qlbIux6lfW79GxEh9P79"
              ]
            }
          }    
        },
        {
          "type": "object",
          "title": "Icon Image Schema",
          "description": "Object used to reference images in bundles and bundle items",
          "required": [
            "type",
            "name"
          ],
          "properties": {
            "type": {
              "const": "icon"
            },
            "name": {
              "type": "string",
              "title": "Name of the Icon",
              "examples": [
                "alert"
              ]
            }
          }    
        },
        {
          "type": "object",
          "title": "Standard Image Schema",
          "description": "Object used to reference images in bundles and bundle items",
          "required": [
            "type",
            "name"
          ],
          "properties": {
            "type": {
              "const": "standard"
            },
            "name": {
              "type": "string",
              "title": "Name of the Standard Image",
              "examples": [
                "business2"
              ]
            }
          }    
        }
      ]
    }
  }
}
