{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://planbundle.com/schemas/contact/social-profile.schema.json",
  "definitions": {
    "social_profile": {
      "type": "object",
      "title": "Social Profile for a Contact",
      "required": [
        "type",
        "username"
      ],
      "properties": {
        "username": {
          "type": "string",
          "title": "User Name",
          "examples": [
            "someuser"
          ],
          "pattern": "^(.*)$"
        },
        "type": {
          "type": ["array","string"],
          "title": "Array of social profile types",
          "items": {
            "type": "string",
            "title": "Social Profile Type",
            "examples": [
              "twitter"
            ],
            "pattern": "^(.*)$"
          }
        },
        "otherTypes": {
          "type": "array",
          "title": "Array on non-standard types",
          "items": {
            "type": "string",
            "title": "A non-standard type name",
            "examples": [
              "internet"
            ],
            "pattern": "^(.*)$"
          }
        },
        "preferred": {
          "type": "boolean",
          "title": "Preferred item indicator",
          "examples": [
            false
          ]
        },
        "label": {
          "type": "string",
          "title": "Item Label",
          "examples": [
            "home"
          ],
          "pattern": "^(.*)$"
        },
        "groupLabel": {
          "type": ["string","null"],
          "title": "Group Label",
          "examples": [
            "Anniversary"
          ],
          "pattern": "^(.*)$"
        }
      },
      "additionalProperties": false
    }
  }
}