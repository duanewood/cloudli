{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://planbundle.com/schemas/contact/phone-number.schema.json",
  "definitions": {
    "phone_number": {
      "type": "object",
      "title": "Phone Number for a Contact",
      "required": [
        "type",
        "value"
      ],
      "properties": {
        "value": {
          "type": "string",
          "title": "Phone Number Value",
          "examples": [
            "(904) 614-2563"
          ],
          "pattern": "^(.*)$"
        },
        "otherTypes": {
          "type": "array",
          "title": "Array on non-standard types",
          "items": {
            "type": "string",
            "title": "A non-standard type name",
            "examples": [
              "internet"
            ],
            "pattern": "^(.*)$"
          }
        },
        "type": {
          "type": ["array","string"],
          "title": "Array of standard types",
          "items": {
            "type": "string",
            "title": "The name of the standard type",
            "examples": [
              "home"
            ],
            "pattern": "^(.*)$"
          }
        },
        "preferred": {
          "type": "boolean",
          "title": "Preferred item indicator",
          "examples": [
            false
          ]
        },
        "label": {
          "type": "string",
          "title": "Item Label",
          "examples": [
            "home"
          ],
          "pattern": "^(.*)$"
        },
        "groupLabel": {
          "type": ["string","null"],
          "title": "Group Label",
          "examples": [
            "Anniversary"
          ],
          "pattern": "^(.*)$"
        }
      },
      "additionalProperties": false              
    }
  }
}