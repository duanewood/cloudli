{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://planbundle.com/schemas/link-item.schema.json",
  "definitions": {
    "link_item": {
      "type": "object",
      "title": "Link Bundle Item Schema",
      "description": "A link bundle item",
      "required": [
        "id",
        "url"
      ],
      "properties": {
        "preview": {
          "type": ["object","null"],
          "title": "The Link Item Preview",
          "properties": {
            "title": {
              "type": ["string","null"],
              "title": "The Link Item Preview Title",
              "examples": [
                "Best Christmas Songs Of All Time"
              ]
            },
            "requestUrl": {
              "type": ["string","null"],
              "title": "The Request URL for the Preview",
              "examples": [
                "https://www.youtube.com/watch?v=ntAnUWbh-Hs"
              ],
              "pattern": "^(.*)$"
            },
            "logo": {
              "type": ["string","null"],
              "title": "The Logo Image URL for the Preview",
              "examples": [
                "https://www.youtube.com/yts/img/favicon_144-vfliLAfaB.png"
              ],
              "pattern": "^(.*)$"
            },
            "description": {
              "type": ["string","null"],
              "title": "The description of the Preview",
              "examples": [
                "Enjoy SING-A-LONG and have fun with the best Christmas Songs of all time."
              ]
            },
            "url": {
              "type": ["string","null"],
              "title": "The resolved URL for the Preview",
              "examples": [
                "https://www.youtube.com/watch?v=ntAnUWbh-Hs"
              ],
              "pattern": "^(.*)$"
            },
            "image": {
              "type": ["string","null"],
              "title": "The Image URL for the Preivew",
              "examples": [
                "https://i.ytimg.com/vi/ntAnUWbh-Hs/maxresdefault.jpg"
              ],
              "pattern": "^(.*)$"
            },
            "publisher": {
              "type": ["string","null"],
              "title": "The Publisher for the Preview",
              "examples": [
                "YouTube"
              ]
            }
          }
        },
        "id": {
          "type": "string",
          "title": "The link item id",
          "examples": [
            "30ccf4a8-5262-483b-b2e3-7b4a9d92d711"
          ],
          "pattern": "^(.*)$"
        },
        "url": {
          "type": "string",
          "title": "The URL of the Image Item",
          "examples": [
            "https://www.youtube.com/watch?v=ntAnUWbh-Hs"
          ],
          "pattern": "^(.*)$"
        }
      },
      "additionalProperties": false
    }
  }
}
