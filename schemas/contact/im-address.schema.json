{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://planbundle.com/schemas/contact/im-address.schema.json",
  "definitions": {
    "im_address": {
      "type": "object",
      "title": "Instant Message Address for a Contact",
      "required": [
        "type",
        "protocol",
        "username",
        "service"
      ],
      "properties": {
        "protocol": {
          "type": "string",
          "title": "Instant Message Address Protocol",
          "examples": [
            "xmpp"
          ],
          "pattern": "^(.*)$"
        },
        "username": {
          "type": "string",
          "title": "User Name",
          "examples": [
            "duaneswood"
          ],
          "pattern": "^(.*)$"
        },
        "service": {
          "type": "string",
          "title": "Instant Message Address Service Name",
          "examples": [
            "Facebook"
          ],
          "pattern": "^(.*)$"
        },
        "otherTypes": {
          "type": "array",
          "title": "Array on non-standard types",
          "items": {
            "type": "string",
            "title": "A non-standard type name",
            "examples": [
              "internet"
            ],
            "pattern": "^(.*)$"
          }
        },
        "type": {
          "type": ["array","string"],
          "title": "Array of standard types",
          "items": {
            "type": "string",
            "title": "The name of the standard type",
            "examples": [
              "home"
            ],
            "pattern": "^(.*)$"
          }
        },
        "preferred": {
          "type": "boolean",
          "title": "Preferred item indicator",
          "examples": [
            false
          ]
        },
        "label": {
          "type": "string",
          "title": "Item Label",
          "examples": [
            "home"
          ],
          "pattern": "^(.*)$"
        },
        "groupLabel": {
          "type": ["string","null"],
          "title": "Group Label",
          "examples": [
            "Anniversary"
          ],
          "pattern": "^(.*)$"
        }
      },
      "additionalProperties": false
    }
  }
}