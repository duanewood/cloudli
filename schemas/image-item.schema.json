{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://planbundle.com/schemas/image-item.schema.json",
  "definitions": {
    "image_item": {
      "type": "object",
      "title": "Image Bundle Item Schema",
      "description": "An image bundle item",
      "required": [
        "image",
        "name",
        "id"
      ],
      "properties": {
        "image": {
          "description": "The item image",
          "$ref": "image.schema.json#/definitions/image"
        },
        "name": {
          "type": "string",
          "title": "The Image Name",
          "examples": [
            "Family"
          ]
        },
        "id": {
          "type": "string",
          "title": "This image item id",
          "examples": [
            "fa0d5c28-af7d-4f47-96a2-8f19831f9ea6"
          ],
          "pattern": "^(.*)$"
        },
        "path_name": {
          "type": "string",
          "title": "Name of Image File for Mobile App",
          "examples": [
            "06E2D07E-1B6B-4A31-882E-03D41AEC1093.jpg"
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
